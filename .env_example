# ========================================
# VidyAI Flask Backend Configuration
# ========================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control!

# ========================================
# API KEYS (Required)
# ========================================
GROQ_API_KEY=your_groq_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# ========================================
# SUPABASE CONFIGURATION (Required)
# ========================================
SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# ========================================
# SUPABASE STORAGE BUCKETS (Optional)
# ========================================
BUCKET_IMAGES=images
BUCKET_AUDIO=audio
BUCKET_VIDEO=video
BUCKET_METADATA=metadata
BUCKET_TEXT=text

# ========================================
# FLASK SERVER CONFIGURATION
# ========================================
# Flask environment: development or production
FLASK_ENV=development

# Flask server host (0.0.0.0 allows external connections)
FLASK_HOST=0.0.0.0

# Flask server port (Backend runs on this port)
FLASK_PORT=5000

# Secret key for Flask sessions (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your_secret_key_here_change_in_production

# Maximum content length (in bytes) - Default: 100MB
MAX_CONTENT_LENGTH=104857600

# ========================================
# CORS CONFIGURATION
# ========================================
# Frontend URL(s) - Your React app runs on port 8080
# Multiple origins: http://localhost:8080,http://localhost:3000
CORS_ORIGINS=http://localhost:8080

# ========================================
# PROCESSING SETTINGS (Optional)
# ========================================
# Maximum characters to process from Wikipedia
MAX_CONTENT_CHARS=25000

# Default storyline length: short, medium, long
DEFAULT_TARGET_LENGTH=medium

# Default number of scenes to generate
DEFAULT_NUM_SCENES=10

# ========================================
# VIDEO GENERATION SETTINGS (Optional)
# ========================================
# Video frames per second
DEFAULT_FPS=30

# Video resolution (widthxheight)
DEFAULT_RESOLUTION=1920x1080

# Minimum scene duration in seconds
DEFAULT_MIN_SCENE_SECONDS=3.0
